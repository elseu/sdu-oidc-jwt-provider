{
  "name": "oidc-jwt-provider",
  "version": "0.1.0",
  "description": "Provide JWTs for API access from an OpenID Connect backend",
  "main": "dist/index.js",
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && concurrently -i \"nodemon dist/index.js\" \"tsc -w\"",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "eslint . --ext .ts"
  },
  "author": "Sebastiaan Besselsen <s.besselsen@sdu.nl>",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.12.3",
    "koa": "^2.13.1",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^9.4.0",
    "micromatch": "^4.0.2",
    "ms": "^2.1.3",
    "node-fetch": "^3.1.1",
    "node-jose": "^2.0.0",
    "randomstring": "^1.1.5",
    "redis": "^3.1.2"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.13.1",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.1",
    "@types/koa__cors": "^3.0.2",
    "@types/micromatch": "^4.0.1",
    "@types/ms": "^0.7.31",
    "@types/node-fetch": "^2.5.8",
    "@types/node-jose": "^1.1.5",
    "@types/randomstring": "^1.1.6",
    "@types/redis": "^2.8.28",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint"
    }
  }
}
